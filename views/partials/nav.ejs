          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <% if (user) {%>
              <!-- Admin or User Check for admin edit view -->
              <% if (user.username === "admin") {%>                                 <!-- If User: Admin Edit, Logout -->
                <a class="dropdown-item" href="/admin">Admin Edit</a>
                <form action="/auth/logout?_method=DELETE" method="POST">
                  <input class="dropdown-item" type="submit" value="Logout 登出" />
                </form>
              <% }else{%>                                                          <!-- If User: Logout -->
                <form action="/auth/logout?_method=DELETE" method="POST">
                  <input class="dropdown-item" type="submit" value="Logout 登出" />
                </form>
              <% }%>

            <%} else {%>
            <a class="dropdown-item" href="/auth/login">Login 
              登录</a>
            <a class="dropdown-item" href="/auth/register">Register 
              登记</a>
            <%}%>
